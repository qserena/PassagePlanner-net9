<FixedPage xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:PassagePlanner="clr-namespace:PassagePlanner"
           xmlns:Globalization="clr-namespace:System.Globalization;assembly=mscorlib"
           HorizontalAlignment="Center" Height="770" Width="1096">

    <!--<FixedPage.Resources>
        <PassagePlanner:SystemDecimalConverter x:Key="decimalConverter" />
    </FixedPage.Resources>-->

    <DockPanel Height="770" Width="1096" HorizontalAlignment="Center" VerticalAlignment="Center" LastChildFill="True">
        <Grid Name="marginTop" DockPanel.Dock="Top" Height="40"/>
        <Grid Name="marginLeft" DockPanel.Dock="Left" Width="30"/>
        <Grid Name="marginRight" DockPanel.Dock="Right" Width="30"/>
        <Grid Name="marginBottom" DockPanel.Dock="Bottom" Height="40">
            <TextBlock Name="assemblyVersionText" VerticalAlignment="Bottom" HorizontalAlignment="Left" Text="Printed from Passage Planner version 1.0.0. Copyright © Seaware AB 2014. All rights reserved." FontSize="8" Margin="0,10,0,18"/>
        </Grid>

        <StackPanel Name="stackPanelMain" Orientation="Vertical">
            
            <Grid Name="gridLogoAndHeader">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Name="columnLogo" Width="*"/>
                    <ColumnDefinition Name="columnHeader" Width="4*"/>
                    <ColumnDefinition Name="columnDatePrepared" Width="*"/>
                </Grid.ColumnDefinitions>
                <Image Grid.Column="0" Source="../../Images/bw_logo.jpg" UseLayoutRounding="True" Height="70" Width="Auto" Margin="0,0,0,10" HorizontalAlignment="Left"/>
                <TextBlock  Grid.Column="1" Text="PASSAGE PLAN - General Notes 1" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <StackPanel Grid.Column="2" Orientation="Vertical" HorizontalAlignment="Right">
                    <StackPanel  Name="stackPanelDate" Orientation="Horizontal" FlowDirection="LeftToRight">
                        <TextBlock Text="Date prepared:" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="3"/>
                        <TextBlock Name="textBlockDate" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="3"/>
                    </StackPanel>
                    <StackPanel  Name="stackPanelPageNo" Orientation="Horizontal" FlowDirection="LeftToRight">
                        <TextBlock Text="Page:" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="3"/>
                        <TextBlock Name="textBlockPageNo" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="3"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            
            <Border BorderBrush="Black" BorderThickness="0.5" Padding="5,12,5,12">
                <Grid Name="gridTop" Height="Auto">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Name="columnShip" Width="9*"/>
                        <ColumnDefinition Name="columnTotalDistance" Width="10*"/>
                        <ColumnDefinition Name="columnDepartureDraught" Width="8*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid Grid.Column="0" Margin="6,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="21*"/>
                            <ColumnDefinition Width="29*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Vessel: " Grid.Column="0" Grid.Row="0"/>
                        <TextBlock Text="Route: " Grid.Column="0" Grid.Row="1"/>
                        <TextBlock Text="Departure time (LT): " Grid.Column="0" Grid.Row="2"/>
                        <TextBlock Text="Arrival time, ETA (LT): " Grid.Column="0" Grid.Row="3"/>
                        <TextBlock Grid.Column="1" DataContext="{Binding VesselVM, Source={StaticResource Locator}}" 
                                 Text="{Binding VesselName, Mode=OneWay}" Grid.Row="0" Padding="0"/>
                        <TextBlock Grid.Column="1" DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                 Text="{Binding RouteName, Mode=OneWay}" Grid.Row="1" Padding="0"/>
                        <TextBlock Grid.Column="1" DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                 Text="{Binding DepartureTimeLocal, Mode=OneWay, ConverterCulture={x:Static Globalization:CultureInfo.CurrentCulture}, StringFormat=\{0:g\}}" 
                                 Grid.Row="2"  Padding="0" />
                        <TextBlock Grid.Column="1" DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                 Text="{Binding ArrivalTimeLocal, Mode=OneWay,  ConverterCulture={x:Static Globalization:CultureInfo.CurrentCulture}, StringFormat=\{0:g\}}" 
                                 Grid.Row="3" Padding="0"/>
                    </Grid>
                    
                    <Grid Grid.Column="1" Margin="0,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>

                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Total distance: " Grid.Column="0" Grid.Row="0"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
                            <TextBlock Margin="0,0,3,0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}"
                                     Text="{Binding TotalDistance, Mode=OneWay, StringFormat=\{0:0.00\}}" Padding="0"/>
                            <TextBlock Text="NM"/>
                        </StackPanel>

                        <TextBlock Text="Average speed: " Grid.Column="0" Grid.Row="1"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="1">
                            <TextBlock Margin="0,0,3,0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}"
                                     Text="{Binding AverageSpeed, Mode=OneWay, StringFormat=\{0:0.00\}}" Padding="0"/>
                            <TextBlock Text="knots" />
                        </StackPanel>

                        <TextBlock Text="Sailing time: " Grid.Column="0" Grid.Row="2"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="2">
                            <TextBlock Margin="0,0,3,0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}"
                                     Text="{Binding TotalSailingTime.Days, Mode=OneWay}" Padding="0"/>
                            <TextBlock Text="days" Margin="0,0,5,0"/>
                            <TextBlock Margin="0,0,3,0" 
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}"
                                     Text="{Binding TotalSailingTimeHoursMinutes, Mode=OneWay}" Padding="0"/>
                            <TextBlock Text="hours and minutes"/>
                        </StackPanel>

                        <TextBlock Text="Min underkeel clearance: " Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"/>
                        <StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="3">
                            <TextBlock Margin="0,0,3,0"
                                     DataContext="{Binding SquatVM, Source={StaticResource Locator}}"
                                     Text="{Binding MinUkcRequired, Mode=OneWay, StringFormat=\{0:0.00\}}" Padding="0"/>
                            <TextBlock Text="m"/>
                        </StackPanel>

                    </Grid>

                    <Grid Grid.Column="2" Margin="0,0,20,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                            <RowDefinition Height="18"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Departure draught" Grid.Column="0" Grid.Row="0"/>
                        <TextBlock Text="Fwd: " Grid.Column="1" Grid.Row="0" TextAlignment="Right"/>
                        <TextBlock Grid.Column="2" Grid.Row="0" TextAlignment="Right"
                                 DataContext="{Binding RouteVM, Source={StaticResource Locator}}"
                                 Text="{Binding DraughtDepartureFore, Mode=OneWay, StringFormat=\{0:0.00\}}" Padding="4,0"/>
                        <TextBlock Text="m      Aft: " Grid.Column="3" Grid.Row="0"/>
                        <TextBlock Grid.Column="4" Grid.Row="0" TextAlignment="Right"
                                 DataContext="{Binding RouteVM, Source={StaticResource Locator}}"
                                 Text="{Binding DraughtDepartureAft, Mode=OneWay, StringFormat=\{0:0.00\}}" Padding="4,0"/>
                        <TextBlock Text="m" Grid.Column="5" Grid.Row="0"/>

                        <TextBlock Text="Arrival draught" Grid.Column="0" Grid.Row="1"/>
                        <TextBlock Text="Fwd: " Grid.Column="1" Grid.Row="1" TextAlignment="Right"/>
                        <TextBlock Grid.Column="2" Grid.Row="1" TextAlignment="Right" Padding="4,0"
                                 DataContext="{Binding RouteVM, Source={StaticResource Locator}}"
                                 Text="{Binding DraughtArrivalFore, Mode=OneWay, StringFormat=\{0:0.00\}}"/>
                        <TextBlock Text="m      Aft: " Grid.Column="3" Grid.Row="1"/>
                        <TextBlock Grid.Column="4" Grid.Row="1" TextAlignment="Right"
                                 DataContext="{Binding RouteVM, Source={StaticResource Locator}}"
                                 Text="{Binding DraughtArrivalAft, Mode=OneWay, StringFormat=\{0:0.00\}}" Padding="4,0"/>
                        <TextBlock Text="m" Grid.Column="5" Grid.Row="1"/>

                        <TextBlock Text="Departure Air draught:" Grid.Column="0" Grid.Row="2" Grid.ColumnSpan="2"/>
                        <TextBlock Grid.Column="2" Grid.Row="2" TextAlignment="Right"
                                 DataContext="{Binding RouteVM, Source={StaticResource Locator}}"
                                 Text="{Binding DraughtDepartureAir, Mode=OneWay, StringFormat=\{0:0.00\}}" Padding="4,0"/>
                        <TextBlock Text="m" Grid.Column="3" Grid.Row="2"/>

                        <TextBlock Text="Arrival Air draught: " Grid.Column="0" Grid.Row="3"/>
                        <TextBlock Grid.Column="2" Grid.Row="3" TextAlignment="Right"
                                 DataContext="{Binding RouteVM, Source={StaticResource Locator}}" Padding="4,0"
                                 Text="{Binding DraughtArrivalAir, Mode=OneWay, StringFormat=\{0:0.00\}}"/>
                        <TextBlock Text="m" Grid.Column="3" Grid.Row="3"/>


                    </Grid>
                </Grid>
            </Border>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel LastChildFill="True" Grid.Column="0" Margin="0,10,5,0">
                    <TextBlock Text="Departure port information" DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="0,0,0,3"/>
                    <Border BorderBrush="Black" BorderThickness="0.5" Padding="5,12,5,12">
                        <Grid Height="Auto" Margin="6,0,6,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="144"/>
                                <ColumnDefinition Width="21"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="67"/>
                                <ColumnDefinition Width="40"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                </Grid.RowDefinitions>
                                

                                <TextBlock Text="Name of berth: " Grid.Column="0" Grid.Row="0"/>
                            <TextBox Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="6" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_NameOfBerth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <!--<TextBox Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="4" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding ElementName=PassagePlanTexts, Path=GN1_DeparturePort_NameOfBerth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>-->

                            <TextBlock Text="VHF channel Port Control: " Grid.Column="0" Grid.Row="1"/>
                            <TextBox Grid.Column="1" Grid.Row="1" BorderThickness="0,0,0,1" Padding="0" Grid.ColumnSpan="2"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_VhfChannelPortControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="VHF channel Pilots: " Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" TextAlignment="Right" />
                            <TextBox Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_VhfChannelPilots, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                                <TextBlock Text="Pre-departure notice for:" Grid.Column="0" Grid.Row="2"/>
                            <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_PreDepartureNoticeFor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            
                                <TextBlock Text="VHF ch: " Grid.Column="5" Grid.Row="2" TextAlignment="Right"/>
                            <TextBox Grid.Column="6" Grid.Row="2"  BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_VhfChannel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            

                                <TextBlock Text="Draught restrictions: " Grid.Column="0" Grid.Row="4"/>

                                <TextBlock Text="Air draught restrictions: " Grid.Column="0" Grid.Row="5"/>

                                <TextBlock Text="Other restrictions: " Grid.Column="0" Grid.Row="6"/>

                                <TextBlock Text="Change of pilot during outward pilot passage at WPT no/pos: " Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="4"/>

                                <TextBlock Text="Guide to Port Entry, vol/page: " Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="2"/>




                            <TextBox Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="6" BorderThickness="0,0,0,1"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_PreDepartureNoticeForSecondRow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="6" BorderThickness="0,0,0,1"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_DraughtRestrictions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="6" BorderThickness="0,0,0,1"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_AirDraughtRestrictions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="6" BorderThickness="0,0,0,1"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_OtherRestrictions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="4" Grid.Row="7" Grid.ColumnSpan="3" BorderThickness="0,0,0,1"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_ChangeOfPilotDuringBlaBlaBla, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="2" Grid.Row="8" Grid.ColumnSpan="5" BorderThickness="0,0,0,1"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_DeparturePort_GuideToPortEntryVolPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            </Grid>
                     
                    </Border>
                </DockPanel>

                <DockPanel LastChildFill="True" Grid.Column="1" Margin="5,10,0,0">
                    <TextBlock Text="Arrival port information" DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="0,0,0,3"/>
                    <Border BorderBrush="Black" BorderThickness="0.5" Padding="5,12,5,12">
                        <Grid Height="Auto" Margin="6,0,6,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="144"/>
                                <ColumnDefinition Width="21"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="60"/>
                                <ColumnDefinition Width="47"/>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                            </Grid.RowDefinitions>

                            <TextBlock Text="Name of berth: " Grid.Column="0" Grid.Row="0"/>
                            <TextBox Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="6" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_NameOfBerth, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="VHF channel Port Control: " Grid.Column="0" Grid.Row="1"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_VhfChannelPortControl, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="VHF channel Pilots: " Grid.Column="3" Grid.Row="1" Grid.ColumnSpan="2" TextAlignment="Right"/>
                            <TextBox Grid.Column="5" Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_VhfChannelPilots, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Pre-arrival notice for:" Grid.Column="0" Grid.Row="2"/>
                            <TextBox Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="4" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_PreArrivalNoticeFor, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            
                            <TextBlock Text="VHF ch: " Grid.Column="5" Grid.Row="2" TextAlignment="Right"/>
                            <TextBox Grid.Column="6" Grid.Row="2"  BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_VhfChannel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBlock Text="Draught restrictions: " Grid.Column="0" Grid.Row="4"/>

                            <TextBlock Text="Air draught restrictions: " Grid.Column="0" Grid.Row="5"/>

                            <TextBlock Text="Other restrictions: " Grid.Column="0" Grid.Row="6"/>

                            <TextBlock Text="Change of pilot during inward pilot passage at WPT no/pos: " Grid.Column="0" Grid.Row="7" Grid.ColumnSpan="4"/>

                            <TextBlock Text="Guide to Port Entry, vol/page: " Grid.Column="0" Grid.Row="8" Grid.ColumnSpan="2"/>

                            <TextBox Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="6" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_PreArrivalNoticeForSecondRow, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="1" Grid.Row="4" Grid.ColumnSpan="6" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_DraughtRestrictions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="6" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_AirDraughtRestrictions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="1" Grid.Row="6" Grid.ColumnSpan="6" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_OtherRestrictions, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="4" Grid.Row="7" Grid.ColumnSpan="3" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_ChangeOfPilotDuringBlaBlaBla, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

                            <TextBox Grid.Column="2" Grid.Row="8" Grid.ColumnSpan="5" BorderThickness="0,0,0,1" Padding="0"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding PassagePlanTexts.GN1_ArrivalPort_GuideToPortEntryVolPage, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
                            
                        </Grid>
             
                    </Border>
                </DockPanel>

            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <DockPanel LastChildFill="True" Grid.Column="0" Margin="0,10,5,0" >
                        <TextBlock Text="Voyage specifications" DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="0,0,0,3"/>
                        <Border BorderBrush="Black" BorderThickness="0.5" Padding="5,8,5,12">

                            <Grid Margin="6,0,6,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                </Grid.RowDefinitions>

                                <TextBlock Text="Distance [NM]" Grid.Column="1" Grid.Row="0" TextAlignment="Center"/>
                                <TextBlock Text=" Avg. speed [knots]" Grid.Column="2" Grid.Row="0" TextAlignment="Center"/>

                                <TextBlock Text="Pilot passage departure: " Grid.Column="0" Grid.Row="1"/>
                                <TextBlock Text="Sea passage: " Grid.Column="0" Grid.Row="2"/>
                                <TextBlock Text="Pilot passage arrival: " Grid.Column="0" Grid.Row="3"/>

                            <TextBlock Grid.Column="1" Grid.Row="1" Margin="5,0,5,0" Padding="0" TextAlignment="Center"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding DistanceSailedToSosp, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat=\{0:0.0\}}"/>
                            <TextBlock Grid.Column="2" Grid.Row="1" Margin="5,0,5,0" Padding="0" TextAlignment="Center"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding AverageSpeedToSosp, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat=\{0:0.00\}}"/>
                            <TextBlock Grid.Column="1" Grid.Row="2" Margin="5,0,5,0" Padding="0" TextAlignment="Center"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding DistanceSospToEosp, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat=\{0:0.0\}}"/>
                            <TextBlock Grid.Column="2" Grid.Row="2" Margin="5,0,5,0" Padding="0" TextAlignment="Center"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding AverageSpeedSospToEosp, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat=\{0:0.00\}}"/>
                            <TextBlock Grid.Column="1" Grid.Row="3" Margin="5,0,5,0" Padding="0" TextAlignment="Center"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding DistanceEospToArrival, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat=\{0:0.0\}}"/>
                            <TextBlock Grid.Column="2" Grid.Row="3" Margin="5,0,5,0" Padding="0" TextAlignment="Center"
                                     DataContext="{Binding RouteVM, Source={StaticResource Locator}}" 
                                     Text="{Binding AverageSpeedEospToArrival, Mode=OneWay, UpdateSourceTrigger=PropertyChanged, StringFormat=\{0:0.00\}}"/>


                            </Grid>
                        </Border>
                    </DockPanel>

                <DockPanel LastChildFill="True" Grid.Column="1" Margin="5,10,5,0" >
                        <TextBlock Text="Tidal information Departure port" DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="0,0,0,3"/>
                        <Border BorderBrush="Black" BorderThickness="0.5" Padding="5,8,5,12">

                            <Grid Margin="6,0,6,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                <RowDefinition Height="22"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
                                <RowDefinition Height="18"/>
